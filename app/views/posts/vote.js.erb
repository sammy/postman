<% if @post.total_votes == 0 %>  
  $('#post<%= @post.id %>_votes').removeClass().addClass("label");
<% elsif @post.total_votes >0 %>
  $('#post<%= @post.id %>_votes').removeClass().addClass("label label-success");
<% else %>
  $('#post<%= @post.id %>_votes').removeClass().addClass("label label-important");
<% end %>

$('#post<%= @post.id %>_votes').html("<%= @post.total_votes %>");

<% unless @vote.errors.empty? %>
alert('<%= @vote.errors.full_messages[0] %>');
<% end %>