<%= form_for @post do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>
<br>
<%= f.label :description %>
<%= f.text_area :description, :cols => '35', :rows => '5' %>
<br>
<%= f.label :url %>
<%= f.text_field :url %>
<br>
<%= f.submit 'Hang it on the wall', :class => "btn btn-primary" %>

<% end %>