<%= form_for @post do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description, :cols => '35', :rows => '5' %>
  <br>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br>
  <h5>Categories</h5>
  <div id="category_btn">
    <%= f.collection_check_boxes  :category_ids, @categories, :id, :name %>
  </div>
  <br/>
<%= f.submit 'Hang it on the wall', :class => "btn btn-primary" %>

<% end %>




