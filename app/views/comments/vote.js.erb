<% if @comment.total_votes == 0 %>  
  $('#comment<%= @comment.id %>').removeClass().addClass("label");
<% elsif @comment.total_votes >0 %>
  $('#comment<%= @comment.id %>').removeClass().addClass("label label-success");
<% else %>
  $('#comment<%= @comment.id %>').removeClass().addClass("label label-important");
<% end %>

$('#comment<%= @comment.id %>').html("<%= @comment.total_votes %>");

<% unless @vote.errors.empty? %>
  alert('<%= @vote.errors.full_messages[0] %>');
<% end %> 